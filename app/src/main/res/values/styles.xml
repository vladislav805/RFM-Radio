<resources>

	<!-- Default style for all activities -->
	<style name="AppCompatTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@color/main_background</item>
		<item name="android:colorBackground">@color/main_background</item>
		<item name="android:statusBarColor">@color/main_background</item>
		<item name="android:navigationBarColor">@color/main_background</item>
	</style>

	<!-- Frequency SeekBar -->
	<style name="FrequencySeekBar">
		<item name="android:progressBackgroundTint">@android:color/transparent</item>
		<item name="android:progressTint">@android:color/transparent</item>
		<item name="android:colorControlActivated">@android:color/transparent</item>
	</style>

	<!-- Frequency TextView and reflection -->
	<style name="Frequency">
		<item name="android:lineSpacingMultiplier">1</item>
		<item name="android:lineSpacingExtra">0sp</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">80sp</item>
		<item name="android:padding">0px</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="RDS_PS">
		<item name="android:fontFamily">monospace</item>
		<item name="android:textSize">22sp</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="RDS_RT">
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="ControlIcon">
		<!--item name="android:gravity">center</item-->
	</style>
</resources>
